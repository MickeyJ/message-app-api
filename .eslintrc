{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "__DEV__": false
  },

  "env": {
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "rules": {
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "no-console": "off",
    "no-unused-vars": ["warn", { "ignoreModules": true }],
    "no-case-declarations": "off"
  }
}